{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mesarti</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mesarti.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ mesarti.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mesarti.description }}</td>
            </tr>
            <tr>
                <th>Etatdepublication</th>
                <td>{{ mesarti.etatdepublication }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ mesarti.categorie }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ mesarti.image }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if mesarti.createdAt %}{{ mesarti.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mesarti_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mesarti_edit', { 'id': mesarti.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
